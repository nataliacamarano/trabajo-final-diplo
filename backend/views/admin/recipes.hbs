<div class="container flex-grow-1 pt-4">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col mb-4">
            <p class="text-end h4">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    {{!--fin de fila 1 --}}
    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7 mb-2">
            <h1>Recetas</h1>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/recipes/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    {{!--fin de fila 2 --}}
    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recipes}}
                    <tr>
                        <th scope="row">{{id}}</th>                        
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/recipes/modificar/{{id}}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                            <a href="/admin/recipes/eliminar/{{id}}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>